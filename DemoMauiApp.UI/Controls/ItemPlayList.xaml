<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMauiApp.UI.Controls.ItemPlayList"
    x:Name="this">
    <StackLayout>
        <Grid>
            <Image
                Source="{Binding LinkImage}"
                Aspect="AspectFill"
                WidthRequest="200"
                HorizontalOptions="FillAndExpand" />
            <Label
                Margin="4, 0, 0, 0"
                Text="{Binding Name}"
                TextColor="White"
                FontSize="20" />
        </Grid>
        <StackLayout >
            <Label
                FontSize="20"
                FontAttributes="Bold"
                Text="{Binding Name}" />
            <Label
                Text="{Binding Description}" />
        </StackLayout>
    </StackLayout>
    
</ContentView>
