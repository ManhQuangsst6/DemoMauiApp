<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:ui="clr-namespace:DemoMauiApp.UI;assembly=DemoMauiApp.UI"
    xmlns:res="clr-namespace:DemoMauiApp.Utils.Resources;assembly=DemoMauiApp.Utils"
    x:Class="DemoMauiApp.UI.Controls.ItemRevenue"
    xmlns:models="clr-namespace:DemoMauiApp.DataAccess.Models;assembly=DemoMauiApp.DataAccess"
    x:DataType="models:Revenue"
    x:Name="this">
    <telerik:RadBorder
        CornerRadius="4"
        BorderThickness="1"
        BorderColor="#E0E0E0" >
        <StackLayout Padding="20">
            <Label
                FontAttributes="Bold"
                Text="Title"
                FontSize="16" />
            <Label
                FontSize="40"
                FontAttributes="Bold"
                Text="{Binding RevenueNumber,Source={x:Reference this}}" />
            <Label
                FontSize="16"
                TextColor="#828282"
                Text="{Binding Rate,Source={x:Reference this}}" />
        </StackLayout>
        
    </telerik:RadBorder>
</ContentView>
