<?xml version="1.0" encoding="utf-8" ?>
<app:BaseContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:controls="clr-namespace:DemoMauiApp.UI.Controls;assembly=DemoMauiApp.UI"
    xmlns:app="clr-namespace:DemoMauiApp.CoreMVVM.MVVM;assembly=DemoMauiApp.CoreMVVM"
    xmlns:ui="clr-namespace:DemoMauiApp.UI;assembly=DemoMauiApp.UI"
    x:Class="DemoMauiApp.Features.Pages.Views.HomeView"
    xmlns:vm="clr-namespace:DemoMauiApp.Features.Pages.ViewModels"
    x:DataType="vm:HomeViewModel">
    <app:BaseContentView.Resources>
    </app:BaseContentView.Resources>
    <ScrollView>
        <StackLayout
            Loaded="StackLayout_Loaded"
            x:Name="aa">
            <Grid
                Margin="0,10,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="auto" />
                </Grid.ColumnDefinitions>
                <telerik:RadTabView
                    Margin="80,0,0,0"
                    WidthRequest="200"
                    x:Name="tabView">
                    <telerik:RadTabView.HeaderItemStyle>
                        <Style
                            TargetType="telerik:TabViewHeaderItem">
                            <Setter
                                Property="BorderColor"
                                Value="Transparent" />
                            <Setter
                                Property="FontAttributes"
                                Value="Bold" />
                            <Setter
                                Property="TextColor"
                                Value="{x:Static ui:AppColors.Black}" />
                            <Setter
                                Property="Padding"
                                Value="{x:Static ui:Dimens.Spacing4}" />
                            <Setter
                                Property="ContentPadding"
                                Value="{x:Static ui:Dimens.Spacing0}" />
                            <Setter
                                Property="VisualStateManager.VisualStateGroups">
                                <VisualStateGroupList>
                                    <VisualStateGroup
                                        Name="CommonStates">
                                        <VisualState
                                            Name="Normal" />
                                        <VisualState
                                            Name="Selected">
                                            <VisualState.Setters>
                                                <Setter
                                                    Property="Background"
                                                    Value="{x:Static ui:AppColors.White}" />
                                                <Setter
                                                    Property="Margin"
                                                    Value="{x:Static ui:Dimens.Spacing4}" />

                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateGroupList>
                            </Setter>
                        </Style>
                    </telerik:RadTabView.HeaderItemStyle>
                    <telerik:RadTabView.HeaderStyle>
                        <Style
                            TargetType="telerik:TabViewHeader">
                            <Setter
                                Property="BorderThickness"
                                Value="{x:Static ui:Dimens.BorderThickness0}" />
                            <Setter
                                Property="CornerRadius"
                                Value="{x:Static ui:Dimens.Radius10}" />
                            <Setter
                                Property="BackgroundColor"
                                Value="{x:Static ui:AppColors.WhisperGray}" />

                        </Style>
                    </telerik:RadTabView.HeaderStyle>
                    <telerik:RadTabView.ContentStyle>
                        <Style
                            TargetType="telerik:TabViewContent">
                            <Setter
                                Property="BorderThickness"
                                Value="{x:Static ui:Dimens.BorderThickness0}" />
                        </Style>
                    </telerik:RadTabView.ContentStyle>
                    <telerik:TabViewItem
                        HeaderText="Tab">
                    </telerik:TabViewItem>
                    <telerik:TabViewItem
                        HeaderText="Tab" />
                    <telerik:TabViewItem
                        HeaderText="Tab" />
                </telerik:RadTabView>
                <telerik:RadButton
                    Grid.Column="2"
                    Margin="0,0,80,0"
                    Command="{Binding CallAction}"
                    WidthRequest="{x:Static ui:Dimens.Width133}"
                    TextColor="{x:Static ui:AppColors.White}"
                    HeightRequest="{x:Static ui:Dimens.Height40}"
                    Background="{x:Static ui:AppColors.Black}"
                    Text="Call to action" />
            </Grid>

            <StackLayout
                Margin="80, 0 ,60 ,80">
                <Label
                    FontAttributes="Bold"
                    FontSize="{x:Static ui:Dimens.Fonsize30}"
                    Text="Title" />
                <Label
                    Text="Subheading" />
                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    JustifyContent="SpaceBetween"
                    BindableLayout.ItemsSource="{Binding PlayLists}"
                    Margin="0,10,0,10">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <controls:ItemPlayList
                                Padding="0,0,20,0"
                                BindingContext="{Binding .}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </StackLayout>
            <StackLayout
                Margin="80,0, 60 ,20">
                <Label
                    FontAttributes="Bold"
                    FontSize="{x:Static ui:Dimens.Fonsize30}"
                    Text="Title" />
                <Label
                    FontSize="{x:Static ui:Dimens.Fonsize12}"
                    Text="Subheading" />
                <FlexLayout
                    Direction="Row"
                    Wrap="Wrap"
                    JustifyContent="SpaceBetween"
                    BindableLayout.ItemsSource="{Binding Artists}"
                    Margin="0,10,0,10">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <controls:ItemArtist
                                Padding="0,0,20,0"
                                BindingContext="{Binding .}" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
    
</app:BaseContentView>
