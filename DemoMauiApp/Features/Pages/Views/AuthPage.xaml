<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:controls="clr-namespace:DemoMauiApp.UI.Controls;assembly=DemoMauiApp.UI"
    xmlns:extension="clr-namespace:DemoMauiApp.UI.Extensions;assembly=DemoMauiApp.UI"
    xmlns:app="clr-namespace:DemoMauiApp.CoreMVVM.MVVM;assembly=DemoMauiApp.CoreMVVM"
    xmlns:ui="clr-namespace:DemoMauiApp.UI;assembly=DemoMauiApp.UI"
    xmlns:vm="clr-namespace:DemoMauiApp.Features.Pages.ViewModels"
    x:Class="DemoMauiApp.Features.Pages.Views.AuthPage">
    <VerticalStackLayout
        WidthRequest="400"
        HorizontalOptions="Center">
        <Label
            Text="App Name"
            FontSize="32"
            FontAttributes="Bold"
            Margin="0, 112,0,0"
            HeightRequest="48"
            LineHeight="150"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <VerticalStackLayout
            Margin="0,136,0,0"
            HorizontalOptions="Center">
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                Text="Create an account" />

            <Label
                Margin="0,6,0,0"
                FontSize="16"
                HorizontalOptions="Center"
                Text="Enter your email to sign up for this app" />
            <Entry
                Margin="0,20,0,12"
                Placeholder="email@domain.com" />
            <telerik:RadButton HeightRequest="40"
                CornerRadius="6"
                Text="Sign up with email"
                Background="{x:Static ui:AppColors.Black}"
                TextColor="{x:Static ui:AppColors.White}"
                HorizontalContentAlignment="Center" />
            <Grid
                ColumnDefinitions="*,*,*"
                Margin="0,20">
                <telerik:RadBorder
                    BorderThickness="1"
                    Background="#999"
                    HeightRequest="3"></telerik:RadBorder>
                <Label
                    HorizontalOptions="Center"
                    Grid.Column="1"
                    TextColor="#999"
                    Text="or continue with" />
                <telerik:RadBorder
                    Grid.Column="2"
                    BorderThickness="1"
                    Background="#999"
                    HeightRequest="3"></telerik:RadBorder>
            </Grid>
            <Grid>
                
                <telerik:RadButton HeightRequest="40"
                    Text="Google"
                    Background="#eeeeee"
                    HorizontalContentAlignment="Center" />
                <Image
                    Margin="10,0,0,0"
                    HorizontalOptions="Start"
                    WidthRequest="20"
                    Source="{x:Static ui:Icons.google}" />
            </Grid>

            <Label
                Padding="30,20"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" >
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            TextColor="#999"
                            Text="By clicking continue, you agree to our " />

                        <Span
                            Text="Terms of Service"
                            TextDecorations="Underline"
                            TextColor="Black">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding OpenTermsOfServiceCommand}" />
                            </Span.GestureRecognizers>
                        </Span>

                        <Span
                            TextColor="#999"
                            Text=" and " />

                        <Span
                            Text="Privacy Policy"
                            TextDecorations="Underline"
                            TextColor="Black">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding OpenPrivacyPolicyCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                        <Span
                            Text="." />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </VerticalStackLayout>
</app:BasePage>
