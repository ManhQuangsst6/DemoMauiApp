<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DemoMauiApp.Pages.Views.MainPage"
    xmlns:vm="clr-namespace:DemoMauiApp.Pages.ViewModels"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:app="clr-namespace:DemoMauiApp.CoreMVVM.MVVM;assembly=DemoMauiApp.CoreMVVM"
    xmlns:ui="clr-namespace:DemoMauiApp.UI;assembly=DemoMauiApp.UI"
    xmlns:res="clr-namespace:DemoMauiApp.Utils.Resources;assembly=DemoMauiApp.Utils"
    x:DataType="vm:MainViewModel"
    x:Name="this">
    <app:BasePage.Resources>
        <DataTemplate
            x:Key="CustomHeaderMainTemplate">
            <Label
                Background="#f2f2f2"
                Text="Music app"
                FontAttributes="Bold"
                FontSize="20"
                Margin="0,5"
                TextColor="Black"
                TranslationX="-40"/>
        </DataTemplate>
        <DataTemplate
            x:Key="ItemContentTemplateHeader1">
            <Label
                TranslationX="-40"
                Text="Discover"
                FontSize="16" FontAttributes="Bold" />
        </DataTemplate>
        <DataTemplate
            x:Key="ItemContentTemplateHeader2">
            <Label
                TranslationX="-40"
                TranslationY="0"
                Text="Library"
                FontSize="16"
                FontAttributes="Bold" />
        </DataTemplate>
       
    </app:BasePage.Resources>
    
    <Grid>
        <telerik:RadNavigationView
            x:Name="navigationView"
            HeaderTemplate="{StaticResource CustomHeaderMainTemplate}"
            AutoChangeDisplayMode="False"
            IsPaneOpen="True"
            DisplayMode="Expanded"
            ItemClicked="navigationView_ItemClicked">
            <telerik:RadNavigationView.Items>
                <telerik:NavigationViewItem
                    ContentTemplate="{StaticResource ItemContentTemplateHeader1}"
                    ImageSource="{x:Null}"
                    IsSelectable="False"/>
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.HomeNavigate}"
                    IsSelected="True"
                    ImageSource="home.png" >
                    
                </telerik:NavigationViewItem>
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.BrowseNavigate}"
                    IsSelected="True" 
                    ImageSource="search.png"/>
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.RadioNavigate}"
                    IsSelected="True" 
                    ImageSource="radio.png"/>
                <telerik:NavigationViewItem
                    ImageSource="{x:Null}"
                    IsSelectable="False"
                    ContentTemplate="{StaticResource ItemContentTemplateHeader2}"/>
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.PlaylistsNavigate}"
                    IsSelected="True"
                    ImageSource="list.png"/>
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.SongsNavigate}"
                    ImageSource="music.png"
                    IsSelected="True" />
                <telerik:NavigationViewItem
                    Text="{x:Static res:AppResource.PickNavigate}"
                    IsSelected="True" 
                    ImageSource="smile.png"/>
            </telerik:RadNavigationView.Items>
            <telerik:RadNavigationView.Content>
                <ContentView
                    x:Name="contentControl" />
            </telerik:RadNavigationView.Content>
        </telerik:RadNavigationView>
    </Grid>
</app:BasePage>